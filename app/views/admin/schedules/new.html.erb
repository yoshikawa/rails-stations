<div class="form">
    <h2>スケジュール登録</h2>
    <% flash.each do |message_type, message| %>
      <%= message %>
    <% end %>
      <%= form_with model: @schedule, url:admin_schedules_path, method: :post do |f| %>
        <div class="form-group">
          <label>開始時刻</label>
            <%= f.time_field:start_time, class: "form-control" %>
        </div>
        <div class="form-group">
          <label>終了時刻</label>
            <%= f.time_field:end_time, class: "form-control" %>
        </div>
        <%= f.hidden_field :movie_id, value: params[:id] %>
        <div class="form-group">
          <%= f.submit "保存", class: "btn btn-primary float-end mt-3" %>
          <div class="clear"></div>
        </div>
      <% end %>
  </div>
</div>