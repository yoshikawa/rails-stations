<h1 class="bg-info p-3">管理画面</h1>

<div class="container-fluid m-0">
  <div class="row">
    <div class="col-2 vm-100 bg-light border d-inline-block m-0">
      <strong class="col-12">menu</strong>

      <button class="btn border col-12">
        <%= link_to '映画一覧', admin_movies_path %>
      </button>

      <button class="btn border col-12">
        <%= link_to '映画登録', new_admin_movie_path %>
      </button>
    </div>

    <div class="row col-10">
      <h1>予約</h1>

      <div class="d-flex row-height">
        <%= form_with url:admin_reservation_path, model: @reservation, method:
        :patch do |f| %>

        <div class="form-group">
          <%= f.label :name, "予約者名" %> <%= f.text_field :name %>
        </div>

        <div class="form-group">
          <%= f.label :email, "予約者email" %> <%= f.text_field :email %>
        </div>

        <div class="form-group">
          <%= f.label :sheet_id, "sheet_id" %> <%= f.collection_select
          :sheet_id, Sheet.all, :id, :id%>
        </div>

        <div class="form-group">
          <%= f.label :schedule_id,"予約時間" %> <%= f.collection_select
          :schedule_id, Schedule.all, :id, :id%>
        </div>

        <div class="form-group">
          <%= f.label :date,"日付"%> <%= f.date_field :date, value: Date.today%>
        </div>

        <%= f.submit "登録" %> <% end %>
      </div>
    </div>
  </div>
</div>
