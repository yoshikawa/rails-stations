<h1 class="bg-info p-3">管理画面</h1>

<div class="container-fluid m-0">
    <div class="row">
      <div class="col-2 mh-100 bg-light border d-inline-block m-0">
        <strong class="col-12">menu</strong>
        <button class="btn border col-12"><%= link_to '映画一覧', admin_movies_path %></button>
        <button class="btn border col-12"><%= link_to '映画登録', new_admin_movie_path %></button>
      </div>
      <div class="row align-items-center col-10">
        <h1>上映一覧</h1>
        <button class="btn border col-1">
          <%= link_to "NEW",new_admin_reservation_path%>
        </button>
        <div class="d-flex justify-content-center row-height">
          <table class="table">
            <thead class="thead-dark">
              <tr>
                <th scope="col">ID</th>
                <th scope="col">映画名</th>
                <th scope="col">sheet_id</th>
                <th scope="col">日時</th>
                <th scope="col">名前</th>
                <th scope="col">メールアドレス</th>
                <th scope="col">作成日時</th>
                <th scope="col">更新日時</th>
                <th scope="col">編集</th>
                <th scope="col">削除</th>
              </tr>
            </thead>
            <tbody>
              <% @reservations.each do |reservation| %>
                <tr>
                  <td><%= link_to reservation.id,admin_reservation_path(reservation)%></td>
                  <td><%= reservation.schedule.movie.name%></td>
                  <td><%= reservation.sheet_id%></td>
                  <td><%= l reservation.date, format: :long%></td>
                  <td><%= reservation.name%></td>
                  <td><%= reservation.email%></td>
                  <td><%= reservation.created_at%></td>
                  <td><%= reservation.updated_at%></td>
                  <td><%= link_to "■",edit_admin_reservation_path(reservation)%></td>
                  <td><%= link_to "■",admin_reservation_path(reservation.id) ,method: :delete%></td>
                </tr>
              <%end%>
            </tbody>
          </table>
        </div>    
      </div>
    </div>

</div>