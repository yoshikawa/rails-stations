<h1>Movies#index</h1>

<table>
  <thead>
      <tr>
        <th>id</th>
        <th>タイトル</th>
        <th>公開年</th>
        <th>概要</th>
        <th>画像URL</th>
        <th>上映中</th>
        <th>登録日</th>
        <th>更新日</th>
      </tr>
    </thead>
    <tbody>
      <% @movies.each do |movie|%>
      <tr>
        <td><%= movie.id %></td>
        <td><%= movie.name %></td>
        <td><%= movie.year %></td>
        <td><%= movie.description %></td>
        <td><%= link_to movie.image_url, class: "movie-image"  %></td>
        <% if movie.is_showing %>
        <td>上映中</td>
        <% end %>
        <% if !movie.is_showing %>
        <td>上映予定</td>
        <% end %>
        <td><%= movie.created_at %></td>
        <td><%= movie.updated_at %></td>
      </tr>
      <% end %>
    </tbody>
</table>
