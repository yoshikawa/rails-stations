<div class="form">
    <h2>映画情報登録</h2>
    <% flash.each do |message_type, message| %>
      <%= message %>
    <% end %>
      <%= form_with model: @movie, url:"/admin/movies/#{@movie.id}", method: :patch do |f| %>
        <div class="form-group">
          <label>タイトル</label>
            <%= f.text_field:name, class: "form-control" %>
        </div>
        <div class="form-group">
          <label>公開年</label>
            <%= f.text_field:year, class: "form-control" %>
        </div>
        <div class="form-group">
        <label>概要</label>
          <%= f.text_area:description, class: "form-control" %>
        </div>
        <div class="form-group">
        <label>画像URL</label>
          <%= f.text_field:image_url, class: "form-control" %>
        </div>
        <div class="form-group">
        <label>上映中</label>
          <%= f.check_box:is_showing, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "保存", class: "btn btn-primary float-end mt-3" %>
          <div class="clear"></div>
        </div>
      <% end %>
  </div>
</div>