<div class="form">
  <h2>映画検索</h2>
  <% flash.each do |message_type, message| %>
    <%= message %>
  <% end %>


<table>
  <thead>
      <tr>
        <th>id</th>
        <th>タイトル</th>
        <th>公開年</th>
        <th>概要</th>
        <th>画像URL</th>
        <th>上映中</th>
        <th>登録日</th>
        <th>更新日</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @movie.id %></td>
        <td><%= @movie.name %></td>
        <td><%= @movie.year %></td>
        <td><%= @movie.description %></td>
        <td><%= image_tag @movie.image_url, class: "movie-image"  %></td>
        <td><%= @movie.is_showing %></td>
        <td><%= @movie.created_at %></td>
        <td><%= @movie.updated_at %></td>
      </tr>
    </tbody>
</table>

<table>
  <thead>
      <tr>
        <th>id</th>
        <th>タイトル</th>
        <th>公開年</th>
        <th>概要</th>
        <th>画像URL</th>
        <th>上映中</th>
        <th>登録日</th>
        <th>更新日</th>
      </tr>
    </thead>
    <tbody>
    <% if @schedules %>
      <% @schedules.each do |schedule|%>
      <tr>
        <td><%= schedule.start_time %></td>
        <td><%= schedule.end_time %></td>
      </tr>
      <% end %>
    <% end %>
    </tbody>
</table>